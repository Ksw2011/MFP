import streamlit as st

st.set_page_config(page_title="KBO 입덕 가이드", page_icon="🌟", layout="centered")

st.title("KBO 프로팀 입덕 가이드 🚀")
st.markdown("""
야구는 몰라도 좋아! ⚾️<br>
당신의 **최애팀**을 찾아줄 입덕 가이드가 여기에! ✨
""", unsafe_allow_html=True)

team = st.selectbox("좋아하는 팀을 선택하세요 🌟", [
    "LG 트윈스 🔴⚫️", "KT 위즈 🧢", "SSG 랜더스 🚗", "NC 다이노스 🦖", "키움 히어로즈 🛡️", 
    "두산 베어스 🐻", "KIA 타이거즈 🐯", "한화 이글스 🦅", "삼성 라이온즈 🦁", "롯데 자이언츠 ⚓"
])

clean_team = team.split()[0]  # "LG 트윈스 🔴⚫️" → "LG"

# 입덕 버튼
if st.button("이 팀으로 입덕할래요 💘"):
    st.toast("🎯 입덕 완료!")
    st.progress(100)
    st.success(f"{clean_team} 팬이 되신 걸 환영합니다! 🎉")

# 임시 로고 이미지
st.image("https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/Baseball.svg/240px-Baseball.svg.png", width=80)

st.markdown("---")

# 입덕 가이드
team_guides = {
    "LG": "🔥 **서울의 자존심, LG 트윈스 입덕 가이드**\n\n대표 선수: 김현수, 박해민\n홈구장: 잠실야구장\n팬덤: 엘레발도 사랑으로 감싸는 팀
